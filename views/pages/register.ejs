<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs'); %>
</head>

<body>
    <div class="w-50 border border-1 mx-auto my-5 p-5">
        <div class="display-1 text-center">
            <i class="fa-solid fa-registered"></i>
        </div>
        <div class="my-3 text-center">
            <h1 class="display-6">REGISTER</h1>
        </div>
        <div>
            <% if (typeof message !=='undefined' ) { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>
        </div>
        <div class="my-1">
            <form action="/register" method="post" enctype="application/x-www-form-urlencoded">
                <div class="form-group my-1">
                    <label for="email">Email: </label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="enter email"
                        value="<%= typeof email !== 'undefined' ? email : '' %>" required>
                </div>
                <div class="form-group my-1">
                    <label for="password">Password: </label>
                    <input type="password" class="form-control" name="password" id="password"
                        placeholder="enter password" value="<%= typeof password !== 'undefined' ? password : '' %>"
                        required>
                </div>
                <a href="/login" class="text-end text-muted">Already Registered</a>
                <div class="form-group my-3 text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-info">Reset</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>